<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lvitem_match_pic_iv"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        tools:src="@mipmap/beef" />

    <TextView
        android:id="@+id/lvitem_match_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/lvitem_match_pic_iv"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="牛肉" />

    <TextView
        android:id="@+id/lvitem_match_conflict_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lvitem_match_title_tv"
        android:layout_alignBottom="@+id/lvitem_match_pic_iv"
        tools:text="羊肉" />

    <ImageView
        android:id="@+id/lvitem_match_expand_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/expand" />

</RelativeLayout>