<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/search_background"
        android:padding="10dp">

        <EditText
            android:id="@+id/match_search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/match_search_iv"
            android:background="@drawable/search_box_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/match_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/match_reset_iv"
            android:src="@mipmap/search_btn" />

        <ImageView
            android:id="@+id/match_reset_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/clear_btn" />

    </RelativeLayout>

    <ListView
        android:id="@+id/match_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#C5C5C5"
        android:dividerHeight="1dp" />

</LinearLayout>